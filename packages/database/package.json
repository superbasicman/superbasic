{
  "name": "@repo/database",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "scripts": {
    "generate": "dotenv -e .env.local -- prisma generate",
    "migrate": "dotenv -e .env.local -- prisma migrate dev",
    "migrate:prod": "dotenv -e .env.local -- sh -c 'DATABASE_URL=${PRODUCTION_DATABASE_URL:-$DATABASE_URL} prisma migrate deploy'",
    "studio": "dotenv -e .env.local -- prisma studio",
    "build": "pnpm run generate && tsup --config tsup.config.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.0.0"
  },
  "devDependencies": {
    "dotenv-cli": "^10.0.0",
    "prisma": "^6.0.0",
    "tsup": "^8.3.0",
    "typescript": "^5.7.2"
  }
}
