{
  "name": "superbasic-finance",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "pnpm": {
    "overrides": {
      "esbuild": "^0.21.5"
    }
  },
  "scripts": {
    "dev": "AUTH_DEBUG=1 turbo run dev",
    "dev:prod": "NODE_ENV=production turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test -- --run",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "db:seed": "tsx tooling/scripts/db-manager.ts seed",
    "db:migrate": "tsx tooling/scripts/db-manager.ts migrate",
    "db:reset": "tsx tooling/scripts/db-manager.ts reset",
    "db:studio": "turbo run studio --filter=@repo/database",
    "db:migrate:local": "cd packages/database && DATABASE_URL=postgresql://superbasic:superbasic@localhost:5432/superbasic_test pnpm exec prisma migrate dev --skip-generate",
    "postinstall": "pnpm --filter @repo/database run generate && pnpm run db:ensure-local",
    "curl-test": "bash tooling/scripts/curl-test.sh"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@playwright/test": "^1.48.0",
    "@types/node": "^20.17.0",
    "dotenv-cli": "^10.0.0",
    "execa": "^9.6.1",
    "resend": "^6.2.2",
    "tsup": "^8.3.0",
    "tsx": "^4.19.2",
    "turbo": "^2.6.1",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}