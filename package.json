{
  "name": "superbasic-finance",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "pnpm": {
    "overrides": {
      "esbuild": "^0.21.5"
    }
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:auth-debug": "AUTH_DEBUG=1 turbo run dev",
    "dev:prod": "NODE_ENV=production turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test -- --run",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "db:seed-oauth": "tsx tooling/scripts/seed-oauth-client.ts",
    "setup:env": "tsx tooling/scripts/setup-env.ts",
    "setup:plaid": "tsx tooling/scripts/setup-plaid.ts",
    "deploy-check": "tsx tooling/scripts/deploy-check.ts",
    "check-db-connection": "node tooling/scripts/check-db-connection.mjs",
    "db:generate": "turbo run generate --filter=@repo/database",
    "db:migrate": "turbo run migrate --filter=@repo/database",
    "db:studio": "turbo run studio --filter=@repo/database",
    "test:core:devdb": "node tooling/scripts/run-core-tests-devdb.mjs",
    "db:reset-and-test": "node tooling/scripts/reset-devdb-and-test.mjs",
    "db:ensure-local": "tsx tooling/scripts/ensure-local-postgres.ts",
    "start-db": "tsx tooling/scripts/ensure-local-postgres.ts",
    "stop-db": "tsx tooling/scripts/stop-local-postgres.ts",
    "db:migrate:local": "cd packages/database && DATABASE_URL=postgresql://superbasic:superbasic@localhost:5432/superbasic_test pnpm exec prisma migrate dev --skip-generate",
    "postinstall": "pnpm --filter @repo/database run generate && pnpm run db:ensure-local",
    "curl-test": "bash tooling/scripts/curl-test.sh"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@playwright/test": "^1.48.0",
    "@types/node": "^20.17.0",
    "resend": "^6.2.2",
    "tsup": "^8.3.0",
    "tsx": "^4.19.2",
    "turbo": "^2.6.1",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
