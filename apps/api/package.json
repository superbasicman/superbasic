{
  "name": "@repo/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "dotenv -e .env.local -- tsx watch src/index.ts",
    "dev:test": "dotenv -e .env.test -- tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "dotenv -e .env.test -- vitest run",
    "test:watch": "dotenv -e .env.test -- vitest",
    "test:coverage": "dotenv -e .env.test -- vitest run --coverage"
  },
  "dependencies": {
    "@auth/core": "^0.37.0",
    "@hono/node-server": "^1.13.7",
    "@hono/zod-openapi": "^0.18.4",
    "@hono/zod-validator": "^0.7.4",
    "@repo/auth-core": "workspace:*",
    "@repo/auth": "workspace:*",
    "@repo/core": "workspace:*",
    "@repo/database": "workspace:*",
    "@repo/observability": "workspace:*",
    "@repo/rate-limit": "workspace:*",
    "@repo/types": "workspace:*",
    "hono": "^4.6.14",
    "resend": "^6.2.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.8",
    "dotenv-cli": "^10.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
