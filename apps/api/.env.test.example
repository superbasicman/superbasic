# Test Environment Configuration
# Copy this file to .env.test and update with your test database credentials

# Server Configuration
PORT=3000
NODE_ENV=test

# Test Database (use a separate database for testing)
# Example: postgresql://user:password@localhost:5432/superbasic_finance_test
DATABASE_URL=postgresql://user:password@localhost:5432/superbasic_finance_test

# Authentication (use a different secret for testing)
AUTH_SECRET=test-auth-secret-min-32-chars-for-testing-only

# Rate Limiting (leave empty to disable in tests)
# UPSTASH_REDIS_REST_URL=
# UPSTASH_REDIS_REST_TOKEN=

# Test Configuration
VITEST_MOCK_DATABASE=false
